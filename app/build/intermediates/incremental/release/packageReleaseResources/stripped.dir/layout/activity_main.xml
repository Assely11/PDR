<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/MyPage1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/MyPage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/startButton"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginRight="@dimen/size_between_btn"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:onClick="startup"
                    android:text="开始"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stopButton"
                        android:layout_width="@dimen/btn_width"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginRight="@dimen/size_between_btn"
                        android:background="@drawable/mybutton2"
                        android:gravity="center"
                        android:onClick="stop"
                        android:text="停止"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/cancelButton"
                        android:layout_width="@dimen/btn_width"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/mybutton2"
                        android:gravity="center"
                        android:onClick="cancel"
                        android:text="取消"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/saveButton"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/size_between_btn"
                    android:background="@drawable/mybutton2"
                    android:gravity="center"
                    android:onClick="save"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/LinearLayout_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/textviewpage2"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="加速度"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/acc_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/time"
                        android:gravity="center"
                        android:text="local time"
                        android:textColor="#E63C3C"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:id="@+id/acc_x"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/textviewx"
                            android:gravity="center"
                            android:text="acce-x"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/acc_y"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/textviewy"
                            android:gravity="center"
                            android:text="acce-y"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/acc_z"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/textviewz"
                            android:gravity="center"
                            android:text="acce-z"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                    </com.google.android.material.bottomnavigation.BottomNavigationView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/drawAcc"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/my_norm_border"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/textviewpage2"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="陀螺仪"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/gyr_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/time"
                        android:gravity="center"
                        android:text="local time"
                        android:textColor="#E63C3C"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:id="@+id/gyr_x"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/textviewx"
                            android:gravity="center"
                            android:text="gyro-x"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gyr_y"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/textviewy"
                            android:gravity="center"
                            android:text="gyro-y"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gyr_z"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/textviewz"
                            android:gravity="center"
                            android:text="gyro-z"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />
                    </com.google.android.material.bottomnavigation.BottomNavigationView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/drawGyr"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/my_norm_border" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/textviewpage2"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="磁场强度"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/magn_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/time"
                        android:gravity="center"
                        android:text="local time"
                        android:textColor="#E63C3C"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:id="@+id/magn_x"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/textviewx"
                            android:gravity="center"
                            android:text="magn-x"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/magn_y"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/textviewy"
                            android:gravity="center"
                            android:text="magn-y"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/magn_z"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/textviewz"
                            android:gravity="center"
                            android:text="magn-z"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />
                    </com.google.android.material.bottomnavigation.BottomNavigationView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/drawMgn"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/my_norm_border" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/textviewpage2"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="姿态角(System)"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/orien_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/time"
                        android:gravity="center"
                        android:text="local time"
                        android:textColor="#E63C3C"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:id="@+id/orien_x"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/textviewx"
                            android:gravity="center"
                            android:text="orien-x"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orien_y"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/textviewy"
                            android:gravity="center"
                            android:text="orien-y"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orien_z"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/textviewz"
                            android:gravity="center"
                            android:text="orien-z"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />
                    </com.google.android.material.bottomnavigation.BottomNavigationView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/drawOrien"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/my_norm_border" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/textviewpage2"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="姿态角(Customer)"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/myorien_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/time"
                        android:gravity="center"
                        android:text="local time"
                        android:textColor="#E63C3C"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:id="@+id/myorien_x"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/textviewx"
                            android:gravity="center"
                            android:text="orien-x"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/myorien_y"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/textviewy"
                            android:gravity="center"
                            android:text="orien-y"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/myorien_z"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/textviewz"
                            android:gravity="center"
                            android:text="orien-z"
                            android:textColor="#E63C3C"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />
                    </com.google.android.material.bottomnavigation.BottomNavigationView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/mydrawOrien"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/my_norm_border" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/MyPage3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/TextView_height"
                    android:gravity="center"
                    android:text="PDR模型"
                    android:background="@drawable/my_sensor_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/TextView_height"

                        android:background="@drawable/my_setting"
                        android:text="身高"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/heightEdit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:inputType="numberSigned"
                        android:maxLength="3"
                        android:background="@drawable/my_norm_border_right"
                        android:hint="CM"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_large">

                    <TextView
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_height="@dimen/TextView_height"
                        android:gravity="center"
                        android:text="模型C值"
                        android:background="@drawable/my_setting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/cEdit"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:inputType="number|numberDecimal"
                        android:maxLength="5"
                        android:background="@drawable/my_norm_border_right"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/TextView_height"
                    android:gravity="center"
                    android:text="轨迹绘制"
                    android:background="@drawable/my_sensor_desc"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_large"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/TextView_height"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_large">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/TextView_height"
                        android:text="轨迹设定"
                        android:gravity="center"
                        android:background="@drawable/my_setting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold">

                    </TextView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/my_norm_border_right">

                        <CheckBox
                            android:id="@+id/drawLines"
                            android:layout_marginLeft="@dimen/margin_large"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="绘制轨迹"
                            android:textColor="@color/cardview_dark_background"

                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="@dimen/TextView_height"
                    android:gravity="center"
                    android:text="定位导航模式"
                    android:background="@drawable/my_sensor_desc"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_large"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/my_norm_border_bottom"
                    android:padding="@dimen/padding_small">



                    <RadioButton
                        android:id="@+id/checkGPSInternet"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="室内网络+GPS模式"
                        android:textSize="@dimen/text_size_small"/>

                    <RadioButton
                        android:id="@+id/checkInternetMy"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="室内网络+PDR模式"
                        android:textSize="@dimen/text_size_small"/>

                    <RadioButton
                        android:id="@+id/checkGPSMy"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="室外GPS+PDR模式"
                        android:textSize="@dimen/text_size_small"/>

                    <RadioButton
                        android:id="@+id/checkGPS"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="室外GPS模式"
                        android:textSize="@dimen/text_size_small"/>

                    <RadioButton
                        android:id="@+id/checkInternet"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="室内网络模式"
                        android:textSize="@dimen/text_size_small"/>

                    <RadioButton
                        android:id="@+id/checkLiberty"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自由模式"
                        android:textSize="@dimen/text_size_small"/>
